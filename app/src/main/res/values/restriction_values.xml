<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Bool restriction -->
    <string name="title_can_increment_number">Can increment number</string>
    <string name="description_can_increment_number">Whether the user can increment the number shown on the screen</string>
    <bool name="default_can_increment_number">true</bool>

    <!-- String restriction -->
    <string name="title_welcome_text">Welcome Message</string>
    <string name="description_welcome_text">Enter a welcome message</string>
    <string name="default_welcome_text">Hello World!</string>

    <!-- Integer restriction -->
    <string name="title_number">Number to play around with</string>
    <string name="description_number">Enter some sort of a number</string>
    <integer name="default_number">123</integer>

    <!-- Choice restriction -->
    <string name="title_colors">Colors</string>
    <string name="description_colors">The most amazing color</string>
    <string name="entry_colors_red">Red</string>
    <string name="entry_colors_blue">Blue</string>
    <string name="entry_colors_android_green">Android Green</string>
    <string-array name="entries_colors">
        <item>@string/entry_colors_red</item>
        <item>@string/entry_colors_blue</item>
        <item>@string/entry_colors_android_green</item>
    </string-array>
    <string-array name="entry_values_colors">
        <item>red</item>
        <item>blue</item>
        <item>androidGreen</item>
    </string-array>
    <string name="default_colors">androidGreen</string>

    <!-- Multi-select restriction -->
    <string name="title_user_role">User Access Roles</string>
    <string name="description_user_role">Access roles that the user has</string>
    <string name="entry_user_role_read_newsfeed">Read news feed</string>
    <string name="entry_user_role_access_camera">Access camera features</string>
    <string name="entry_user_role_access_contacts">Access contacts</string>
    <string name="entry_user_role_publish_news">Publish content</string>
    <string-array name="entries_user_role">
        <item>@string/entry_user_role_read_newsfeed</item>
        <item>@string/entry_user_role_access_camera</item>
        <item>@string/entry_user_role_access_contacts</item>
        <item>@string/entry_user_role_publish_news</item>
    </string-array>
    <string-array name="entry_values_user_role">
        <item>readNewsFeed</item>
        <item>accessCamera</item>
        <item>accessContacts</item>
        <item>publishNews</item>
    </string-array>
    <string-array name="default_user_role">
    </string-array>

    <!-- Hidden restriction -->
    <string name="title_secret_code">Secret code</string>
    <string name="description_secret_code">This restriction is hidden and will not be shown to the administrator.</string>
    <string name="default_secret_code">${userEmailAddress}</string>

    <!-- Bundle array restriction -->
    <string name="title_bookmarks">Bookmarks</string>
    <string name="title_bookmark">Bookmark</string>
    <string name="title_bookmark_key">Name</string>
    <string name="description_bookmark_key">Enter the bookmark name that will be visible to the user</string>
    <string name="title_bookmark_value">Value</string>
    <string name="description_bookmark_value">Enter an URL for the bookmark, ex. https://example.com</string>


    <string name="title_username">Enter the username for the login screen</string>
    <string name="description_username">This should be a dynamic property or just the company domain that needs to be forwarded to the app for login</string>
    <string name="default_username">${userEmailAddress}</string>


</resources>